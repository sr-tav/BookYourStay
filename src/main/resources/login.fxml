<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="co.edu.uniquindio.bookyourstay.controladores.LoginControlador"
      prefHeight="400.0" prefWidth="400.0" alignment="center" spacing="30.0" >

    <Label text="Iniciar sesion" >
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <GridPane alignment="CENTER" hgap="10.0" vgap="10.0">
        <Label text="Correo" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="0" minHeight="30.0" />

        <Label text="ContraseÃ±a:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" minHeight="30.0" />
    </GridPane>

    <Label fx:id="errorText" textFill="#eb5454" />

